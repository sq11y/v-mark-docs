{
  "extends": "@tsconfig/node24/tsconfig.json",
  "include": ["src"],
  "exclude": ["eslint.config.ts"],

  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],

    "noUncheckedIndexedAccess": true,

    "skipLibCheck": true,
    "esModuleInterop": true,

    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist/types"
  }
}
