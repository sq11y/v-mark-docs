{
  "name": "v-mark-docs",
  "description": "Markdown related utilities for documenting Vue components.",
  "version": "0.3.4",
  "keywords": [
    "vue",
    "markdown",
    "documentation"
  ],
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sq11y/v-mark-docs"
  },
  "bin": {
    "v-mark-docs": "./index.js"
  },
  "exports": {
    "./types": "./env.d.ts"
  },
  "files": [
    "dist/",
    "env.d.ts"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "copyfiles --up 1 \"src/**/*.{html,ico}\" dist/",
    "lint": "eslint ./src --fix",
    "format": "prettier --write ./src"
  },
  "peerDependencies": {
    "typescript": "^5.9.3",
    "v-custom-block": "^1.0.67",
    "vite": "^7.2.4",
    "vue": "^3.5.25"
  },
  "dependencies": {
    "@mdit-vue/plugin-component": "^3.0.2",
    "@mdit-vue/plugin-frontmatter": "^3.0.2",
    "@mdit-vue/plugin-sfc": "^3.0.2",
    "fast-glob": "^3.3.3",
    "front-matter": "^4.0.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-vue-meta": "^0.0.2",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tsconfig/node24": "^24.0.3",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-attrs": "^4.1.3",
    "@types/node": "^24.10.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "jiti": "^2.6.1",
    "prettier": "^3.7.2",
    "typescript-eslint": "^8.48.0"
  }
}
